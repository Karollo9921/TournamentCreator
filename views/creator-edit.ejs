<body>

    <%- include('includes/navbar.ejs') %>
    <div class="container">
    <p>Here you can create your Tournament!</p>
    <form class="form" action="/creator-edit/<%=id%>?_method=PUT" method="POST">
        <label>Discypline:</label><br>
        <input type="text" name="discipline" value="<%= discipline %>"><br><br>
        <label for="lname">Tournament type:</label><br>
        <select name="type">
            <option><%= type === "Bracket Tournament" ? 'Bracket Tournament' : 'League Tournament' %></option>
            <option><%= type !== "Bracket Tournament" ? 'Bracket Tournament' : 'League Tournament' %></option>
        </select><br><br>
        <label>Description of Tournament:</label><br>
        <textarea name="description" rows="4" cols="50"><%= description %></textarea><br><br>
        <input class="button" type="submit" value="Edit"><br>
      </form> 
      

<%- include('includes/end.ejs') %>
